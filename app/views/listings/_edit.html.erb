<%= form_for @listing, html: { multipart: true } do |f| %>
  <% if @listing.errors.any? %>
    <% @listing.errors.full_messages.each do |message| %>
        <p><%= message %></p>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price%><br />
    <%= f.number_field :price, min: '0', step: 'any', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :expiration %><br />
    <%= f.datetime_field :expiration, min: Date.today, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :category_id %><br />
    <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Select a Category"}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :condition_id %><br />
    <%= f.collection_select :condition_id, Condition.all, :id, :name, {prompt: "Select a Condition"}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :image %></br>
    <%= f.file_field :image, id: 'pictureInput', class: "form-control-file" %>
  </div>
  <div id="target">
  </div>
  <div>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
