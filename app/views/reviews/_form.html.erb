<%= form_for [@user, @review] do |f| %>
  <% if @review.errors.any? %>
    <% @review.errors.full_messages.each do |message| %>
        <p><%= message %></p>
    <% end %>
  <% end %>
  <div>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <div id="star-rating"></div>
  </div>
  <div>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>

<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
