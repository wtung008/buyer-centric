<div class="ui segment">
  <h3>Inbox</h3>
  <div class="ui list">
    <div class="item">
      <% @conversations.each do |conversation| %>
        <% if conversation.seller_id == current_user.id || conversation.buyer_id == current_user.id %>
          <% if conversation.seller_id == current_user.id %>
            <% buyer = User.find(conversation.buyer_id) %>
          <% else %>
            <% buyer = User.find(conversation.seller_id) %>
          <% end %>
          <%= link_to buyer.first_name, conversation_messages_path(conversation)%><br />
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="ui segment">
  <h3>All Contacts</h3>
  <div class="ui list">
    <% @offers.each do |offer| %>
      <% if offer.seller_id == current_user.id || offer.buyer_id == current_user.id %>
        <% if offer.seller_id == current_user.id %>
          <% buyer = User.find(offer.buyer_id) %>
        <% else %>
          <% buyer = User.find(offer.seller_id) %>
        <% end %>
        <div class="item">
          <%= buyer.first_name %> <%= link_to 'Message', conversations_path(seller_id: current_user.id, buyer_id: buyer.id), method: 'post'%>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
